{
   "name": "NEAR FT Tutorial Devcontainer",
   "postStartCommand": "echo \"export PS1='> '\" >> ~/.bashrc",
   "build": {
      "dockerfile": "./Dockerfile",
      "context": "."
   },
   "customizations": {
      "vscode": {
         "extensions": [
            "rust-lang.rust-analyzer",
            "serayuzgur.crates",
            "tamasfe.even-better-toml",
            "artdiniz.quitcontrol-vscode"
         ],
         "settings": {
            "workbench.startupEditor": "none"
         }
      }
   },
   "hostRequirements": {
      "cpus": 4,
      "memory": "16gb",
      "storage": "32gb"
   }
}
